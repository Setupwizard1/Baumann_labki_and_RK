import telebot
bot = telebot.TeleBot('TOKEN')

from telebot import types

from random import randint

@bot.message_handler(content_types=['text'])
def get_text_messages(message):
    if message.text == "–ü—Ä–∏–≤–µ—Ç":
        bot.send_message(message.from_user.id, "–ü—Ä–∏–≤–µ—Ç, –¥–ª—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö –∫–æ–º–∞–Ω–¥ –Ω–∞–ø–∏—à–∏ /help")
    elif message.text == "/help":
        bot.send_message(message.from_user.id, "/guess - —É–≥–∞–¥–∞–π –∫–Ω–æ–ø–∫—É")
    elif message.text == "/guess":
        keyboard = types.InlineKeyboardMarkup()
        key_yes = types.InlineKeyboardButton(text='üçâ', callback_data='one')
        keyboard.add(key_yes)
        key_no = types.InlineKeyboardButton(text='üåü', callback_data='two')
        keyboard.add(key_no)

        bot.send_message(message.from_user.id, text="–ö–∞–∫–æ–π –∑–Ω–∞—á–æ–∫ —è –∑–∞–≥–∞–¥–∞–ª?", reply_markup=keyboard)

        @bot.callback_query_handler(func=lambda call: True)
        def callback_worker(call):
            answer = randint(0, 1)
            if call.data == "one":
                if answer == 1:
                    bot.send_message(call.message.chat.id, '–£–≥–∞–¥–∞–ª!')
                else:
                    bot.send_message(call.message.chat.id, '–ù–µ —É–≥–∞–¥–∞–ª!')
            elif call.data == "two":
                if answer == 0:
                    bot.send_message(call.message.chat.id, '–£–≥–∞–¥–∞–ª!')
                else:
                    bot.send_message(call.message.chat.id, '–ù–µ —É–≥–∞–¥–∞–ª!')

    else:
        bot.send_message(message.from_user.id, "–Ø —Ç–µ–±—è –Ω–µ –ø–æ–Ω–∏–º–∞—é. –ù–∞–ø–∏—à–∏ /help.")



bot.polling(none_stop=True, interval=0)
